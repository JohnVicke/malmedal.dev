{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
