---
import "@fontsource/fira-code";

import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

import "@/styles/base.css";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <script is:inline>
    const theme = localStorage.getItem("theme") ?? "dark";
    localStorage.setItem("theme", theme);
    document.querySelector("html").className = theme;
  </script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
  <meta name="generator" content={Astro.generator} />
  <meta
    name="description"
    content="Viktor Malmedal personal website and portfolio"
  />
  <title>{title}</title>

  <body
    class="h-screen w-screen overflow-x-hidden flex flex-col justify-between"
  >
    <Navbar />
    <main
      class="flex-1 flex flex-col max-w-screen-md m-auto p-4 pt-20 md:pt-24 w-full"
    >
      <slot class="flex-1" />
      <div class="h-28"></div>
    </main>
    <Footer />
  </body>
</html>
