---
import "@fontsource/fira-code";

import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
  href: string;
  disableNav?: boolean;
}

const vercelUrl = import.meta.env.VERCEL_URL;
const { title, href, disableNav } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <script is:inline>
    let darkMode = localStorage.getItem("darkMode");
    if (!darkMode) {
      darkMode = "true";
      localStorage.setItem("darkMode", "true");
    }
    const theme = darkMode === "true" ? "dark" : "light";
    document.querySelector("html").className = theme;
  </script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
  <meta name="generator" content={Astro.generator} />
  <meta
    name="description"
    content="Viktor Malmedal personal website and portfolio"
  />
  <title>{title}</title>

  <body
    class="bg-neutral-200 dark:bg-neutral-800 h-screen w-screen text-slate-100 overflow-x-hidden"
  >
    <Navbar />
    <main class="flex flex-col max-w-screen-md m-auto p-4 pt-8 md:pt-24">
      <slot class="flex-1" />
      <div class="h-28"></div>
    </main>
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
      body {
        font-family: "Fira Code", monospace;
      }
    </style>
  </body>
</html>
