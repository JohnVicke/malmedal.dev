---
import { cn } from "@/utils/cn";

interface Props {
  active?: boolean;
  href: string;
}

const { href, active } = Astro.props;
console.log(href, active);
---

<a
  class={cn(
    "group inline-flex items-center gap-x-2 opacity-80 hover:opacity-100 transition-opacity duration-200 relative ease-in-out",
    active && "opacity-100 font-sembold",
  )}
  href={href}
>
  <slot />
  <span
    class={cn(
      "absolute -bottom-2 block w-0 group-hover:w-full transition-all duration-500 h-px bg-foreground",
      active && "w-full",
    )}></span>
</a>
