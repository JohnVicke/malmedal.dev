---
import { cn } from "@/utils/cn";

interface Props {
  active?: boolean;
  href: string;
}

const { href, active } = Astro.props;
---

<a
  class={cn(
    "group inline-flex items-center gap-x-2 opacity-50 hover:opacity-100 transition-opacity duration-200 relative ease-in-out",
    active && "opacity-100 font-sembold",
  )}
  href={href}
>
  <slot />
</a>
