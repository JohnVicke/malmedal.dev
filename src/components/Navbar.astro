---
import { LinkedInIcon } from "@/icons/LinkedInIcon";

import { BlogIcon } from "../icons/BlogIcon";
import { GithubIcon } from "../icons/GithubIcon";
import { HomeIcon } from "../icons/HomeIcon";
import { RocketIcon } from "../icons/RocketIcon";
import NavItem from "./NavItem.astro";
import { ToggleColorTheme } from "./ToggleColorTheme";

const { pathname } = Astro.url;
const isBlog = pathname.includes("/blog/") || pathname === "/blog";
---

<div class="fixed top-0 z-50 backdrop-blur-md w-full py-2 flex justify-center">
  <div
    class="px-4 w-full max-w-screen-md m-auto flex items-center justify-between"
  >
    <nav class="flex gap-x-8">
      <NavItem href="/" active={pathname === "/"}>
        <HomeIcon className="sm:block hidden" />
         Home
      </NavItem>
      <NavItem href="/projects" active={pathname === "/projects"}>
        <RocketIcon className="sm:block hidden" />
         Projects
      </NavItem>
      <NavItem href="/blog" active={isBlog}>
        <BlogIcon className="sm:block hidden" />
         Blog
      </NavItem>
    </nav>
    <ToggleColorTheme client:only="react" />
  </div>
</div>
