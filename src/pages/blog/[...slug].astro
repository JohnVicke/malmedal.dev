---
import { getEntry } from "astro:content";
import { formatDateToDisplay } from "@/utils/date";
import { estimateReadingTime } from "@/utils/estimated-reading-time";
import MainLayout from "@/layouts/MainLayout.astro";
import { Callout } from "@/components/Callout";
import Link from "@/components/Link";
import Text from "@/components/Text";
import {updateAndSelectPageView} from "@/lib/update-page-view";

const {slug} = Astro.params

if(!slug) {
  throw new Error("No slug provided")
}

const entry = await getEntry("blog", slug)

if(!entry) {
  return Astro.redirect("/404")
}

const {render, body,  data: {title, description, date, draft}} = entry

const { Content } = await render();
const estRead = estimateReadingTime(body);

const res = await updateAndSelectPageView(slug)

---

<MainLayout title={title} description={description}>
  <article class="flex-1">
    {
      draft && (
        <Callout
          className="mb-12"
          title="üöß This is a draft post"
          description="If you have access to see this, awesome! Please don't leak it before it's public üôè"
        />
      )
    }
    <Text className="text-4xl my-2" level="h1">{title}</Text>
    <p class="text-sm">
      <time class="text-foreground/70">{formatDateToDisplay(date)}</time>
      <span class="text-foreground/70"> ¬∑ {estRead} read</span>
      <span class="text-foreground/70"> ¬∑ {res?.views ?? 0} views</span>
    </p>
    <Text className="my-8">{description}</Text>
    <div class="flex-1 mb-12">
      <Content />
    </div>
  </article>
  <div class="flex justify-between items-center">
    <Link href="/blog" className="w-fit">‚Üê Back to blog</Link>
  </div>
</MainLayout>
